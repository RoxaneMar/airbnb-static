    <!-- Your banner code -->
    <div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('images/background.jpg');">
      <div class="banner-content">
        <h1>WELCOME HOME</h1>
        <p>Rent unique places to stay from local hosts in 190+ countries.</p>
        <form class="form-inline">
          <input class="form-control input-lg datepicker" type="text" placeholder="checkin">
          <input class="form-control input-lg datepicker" type="text" placeholder="checkout">
          <select class="form-control input-lg">
            <option value="1">1 guest</option>
            <option value="2">2 guests</option>
            <option value="3">3 guests</option>
          </select>
          <%= link_to "Search", "#", class: "btn btn-primary btn-lg" %>
        </form>
      </div>
    </div>

    <!-- Your features code -->
    <div class="wrapper-beige">
      <div class="container">
        <div class="row">
          <div class="col-xs-12 col-sm-6 col-lg-3">
            <%= image_tag "images/globe.png", class: "icones" %>
            <h3>Discover the world</h3>
            <p>The earth is your new home.</p>
          </div>
          <div class="col-xs-12 col-sm-6 col-lg-3">
            <%= image_tag "images/dollar.png", class: "icones" %>
            <h3>Pay online</h3>
            <p>No cash issues anymore.</p>
          </div>
          <div class="col-xs-12 col-sm-6 col-lg-3">
            <%= image_tag "images/beer.png", class: "icones" %>
            <h3>Meet people</h3>
            <p>Discover new culture and lifestyle.</p>
          </div>
          <div class="col-xs-12 col-sm-6 col-lg-3">
            <%= image_tag "images/heart.png", class: "icones" %>
            <h3>Share and love</h3>
            <p>Join a community you will love.</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Your cards code -->
    <div class="wrapper-grey">
      <div class="container">
      <h1 class="text-center">Your next trip</h1>
        <div class="row">
          <div class="col-xs-12 col-sm-4">
            <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('images/card-paris.jpg');">
              <h1 class="city">Paris</h1>
              <div class="description">
                <h2>Seb's home</h2>
                <p>Charming room with patio</p>
              </div>
              <%= image_tag "images/seb.jpg", class: "avatar" %>
            </div>
          </div>
          <div class="col-xs-12 col-sm-4">
            <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('images/card-brussels.jpeg');"">
              <h1 class="city">Brussels</h1>
              <div class="description">
                <h2>Anne's home</h2>
                <p>Lovely house</p>
              </div>
              <%= image_tag "images/anne.jpg", class: "avatar" %>
            </div>
          </div>
          <div class="col-xs-12 col-sm-4">
            <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('images/card-london.jpeg');">
              <h1 class="city">London</h1>
              <div class="description">
                <h2>Romain's home</h2>
                <p>Nice flat in Piccadilly</p>
              </div>
              <%= image_tag "images/romain.jpeg", class: "avatar" %>
            </div>
          </div>
        </div>
      </div>
    </div>

