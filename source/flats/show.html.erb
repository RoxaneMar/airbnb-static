<% flat = data.flats[owner] %>

<!-- Inject flat data in template -->


<div class="banner profile" style="background-image: linear-gradient(-225deg, rgba(0,0,0,0.7) 0%, rgba(0,0,0,0.5) 50%), url('<%= image_path(flat.picture) %>');">
</div>


<div class="show-wrapper">
  <div class="container">
    <div class="row">
    <div class="col-xs-12 col-sm-6">
        <div class="header-flat-details">
          <div class="header-flat-howner text-center">
            <%= image_tag flat.owner_picture, class: "avatar" %>
            <p><%= flat.owner_name %></p>
          </div>
          <div class="wrap">
            <h4><%= flat.summary %></h4>
            <p><%= flat.city %></p>
            <i class="fa fa-star full"></i>
            <i class="fa fa-star full"></i>
            <i class="fa fa-star full"></i>
            <i class="fa fa-star full"></i>
            <i class="fa fa-star empty"></i>
          </div>
        </div>
      </div>
      <div class="col-xs-12 col-sm-4 booker">
        <h4>Book this flat</h4>
        <form class="rent-form">
          <div class="form-group">
            <div class= "row">
              <div class="col-xs-6">
                <input class="form-control datepicker" type="text" placeholder="checkin">
              </div>
              <div class="col-xs-6">
                <input class="form-control datepicker" type="text" placeholder="checkout">
              </div>
            </div>
          </div>
          <div class="form-group">
            <div class="row">
              <div class="col-xs-12">
                <select class="form-control">
                  <option value="1">1 guest</option>
                  <option value="2">2 guests</option>
                  <option value="3">3 guests</option>
                </select>
              </div>
            </div>
          </div>
          <div class="form-group">
            <div class="row">
              <div class="col-xs-12">
                <input type="submit" class="form-control btn btn-primary" value="Book it">
              </div>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
